mixin deployScripts(list)
	each source in list
		script(src=source)
mixin deployStyles(list)
	each source in list
		link(rel="stylesheet" href=source type="text/css")
mixin makeHeaderAndNav(menu, pageName)
	header
		nav.navbar-nav.navbar-fixed-top.navbar-default
			div.container
				div.navbar-header.navbar-left
					a(href='#').navbar-brand PZPI 17-3
				div
					ul.nav.navbar-nav.navbar-right
						each point in menu
							li
								a(href=point.href)=point.name 
				
mixin addTypicalArticle(headerText, text)
	article
		header
			h1 #{headerText}
		p #{text}
